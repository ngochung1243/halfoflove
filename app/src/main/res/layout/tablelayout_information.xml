<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:layout_margin="20dp">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout>

            <ImageView
                android:id="@+id/icon_location"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_location"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lives in"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/icon_location"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HCM City"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/text"/>

        </RelativeLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout>

            <ImageView
                android:id="@+id/icon_relationship"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_relationship"/>

            <TextView
                android:id="@+id/relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Being in love"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/icon_relationship"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" from"
                android:textSize="13dp"
                android:layout_marginTop="7dp"
                android:textStyle="italic"
                android:layout_toRightOf="@+id/relationship"/>

            <TextView
                android:id="@+id/first_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 08/10/2016"
                android:textSize="13dp"
                android:textStyle="italic"
                android:layout_alignTop="@+id/relationship"
                android:layout_toRightOf="@+id/text2"
                android:layout_toEndOf="@+id/text2" />

        </RelativeLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout>

            <ImageView
                android:id="@+id/icon_birthday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_birthday"/>

            <TextView
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/06/1995"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/icon_birthday"/>

        </RelativeLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout>

            <ImageView
                android:id="@+id/icon_email"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_email"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="khatran216@gmail.com"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/icon_email"/>

        </RelativeLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout>

            <ImageView
                android:id="@+id/icon_follower"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_follower"/>

            <TextView
                android:id="@+id/num_follower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/icon_follower"/>

            <TextView
                android:id="@+id/followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="followers"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/num_follower"/>

        </RelativeLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout>

            <ImageView
                android:id="@+id/icon_interested_in"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_heart"/>

            <TextView
                android:id="@+id/interested_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guitar"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/icon_interested_in"/>

        </RelativeLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout>

            <ImageView
                android:id="@+id/icon_bio"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_bio"/>

            <TextView
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới thiệu"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/icon_bio"/>

        </RelativeLayout>

    </TableRow>

</TableLayout>